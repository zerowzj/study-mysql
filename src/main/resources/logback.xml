<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="PROJECT_NAME" value="study-springboot-dao"/>
    <property name="LOG_HOME" value="/xdfapp/logs/${PROJECT_NAME}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%5level] [%class:%line] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%5level] [%class:%line] - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/sql.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>20MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- ==================== -->
    <!-- 1.路径指的是mybatis对应的方法接口所在的包 -->
    <!-- 2.默认情况下子logger会继承root的logger的appender，也就是说子logger会在root的logger的appender里输出 -->
    <!-- 3.若是additivity设为true，则子logger不仅在自己的appender里输出，还会在root的logger的appender里输出 -->
    <!-- ==================== -->
    <logger name="study.springboot.dao.mapper" level="DEBUG" additivity="true">
        <appender-ref ref="SQL_FILE"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>